Date: Tue, 18 Jun 2019 08:06:40 +0100
Subject: [PATCH 7/7] STAGING test-configs.yaml: use buster-igt from staging

---
 build-configs.yaml |  1 -
 test-configs.yaml  | 16 +++++++++++-----
 2 files changed, 11 insertions(+), 6 deletions(-)

diff --git a/build-configs.yaml b/build-configs.yaml
index 7fff1413f473..6edb6a0d24b8 100644
--- a/build-configs.yaml
+++ b/build-configs.yaml
@@ -541,7 +541,6 @@ build_configs:
               - whitelist: {defconfig: ['x86_64_defconfig']}
       clang-8:
         build_environment: clang-8
-        fragments: [panfrost]
         architectures:
           arm: *staging_arm
           arm64: *staging_arm64
diff --git a/test-configs.yaml b/test-configs.yaml
index 3d3256f3f157..c6b256b783c1 100644
--- a/test-configs.yaml
+++ b/test-configs.yaml
@@ -20,6 +20,12 @@ file_system_types:
       armhf: [{arch: arm}]
       amd64: [{arch: x86_64}]
 
+  debian_staging:
+    url: 'http://staging-storage.kernelci.org/images/rootfs/debian'
+    arch_map:
+      armhf: [{arch: arm}]
+      amd64: [{arch: x86_64}]
+
 
 file_systems:
 
@@ -43,14 +49,14 @@ file_systems:
     type: debian
     ramdisk: 'buster/20190607.0/{arch}/rootfs.cpio.gz'
 
+  debian_buster-igt_ramdisk:
+    type: debian_staging
+    ramdisk: 'buster-igt/20190618.0/{arch}/rootfs.cpio.gz'
+
   debian_stretch_ramdisk:
     type: debian
     ramdisk: 'stretch/20190607.0/{arch}/rootfs.cpio.gz'
 
-  debian_stretch-igt_ramdisk:
-    type: debian
-    ramdisk: 'stretch-igt/20190607.0/{arch}/rootfs.cpio.gz'
-
   debian_stretch-v4l2_ramdisk:
     type: debian
     ramdisk: 'stretch-v4l2/20190607.0/{arch}/rootfs.cpio.gz'
@@ -116,7 +122,7 @@ test_plans:
     rootfs: debian_buster_ramdisk
 
   igt:
-    rootfs: debian_stretch-igt_ramdisk
+    rootfs: debian_buster-igt_ramdisk
 
   kselftest:
     rootfs: buildroot_kselftest_ramdisk
